@using CinemaSystem.Models.Entities;
@model CinemaHall

<div class="card shadow border-0 my-4">
    <div class="card-header bg-danger bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Cinema Hall</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3">
                <div class="row">
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" disabled class="form-control border-0 shadow" />
                        <label asp-for="Name" class="ms-2"></label>
                    </div>

                    <div class="form-floating py-2 col-6">
                        <input asp-for="Cinema.Name" disabled class="form-control border-0 shadow" />
                        <label>Cinema Location</label>
                    </div>

                    <div class="form-floating py-2 col-6">
                        <input asp-for="HallType" disabled class="form-control border-0 shadow" />
                        <label asp-for="HallType" class="ms-2"></label>
                    </div>

                    <div class="form-floating py-2 col-12 text-center mt-3">
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong>Warning:</strong> Deleting this hall will permanently remove all <strong>@Model.TotalSeats</strong> configured seats.
                        </div>
                    </div>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Confirm Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>