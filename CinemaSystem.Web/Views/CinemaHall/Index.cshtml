@using CinemaSystem.Models.Entities
@model IEnumerable<CinemaHall>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Cinema Hall List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-12 text-end">
                <a asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Hall</a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Hall Name</th>
                    <th>Cinema Location</th>
                    <th>Hall Type</th>
                    <th>Capacity</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.Cinema.Name</td>
                        <td>@obj.HallType</td>
                        <td>@obj.TotalSeats Seats</td>
                        <td class="text-center">
                            <a asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>