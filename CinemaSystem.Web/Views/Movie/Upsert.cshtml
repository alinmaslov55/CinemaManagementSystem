@model CinemaSystem.Models.Entities.Movie
@using CinemaSystem.Models.Data.Enums

<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id != 0 ? "Update" : "Create") Movie</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <input asp-for="ImageUrl" hidden />

            <div class="col-10">
                <div class="border p-3">
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Title" class="form-control border-0 shadow" />
                        <label asp-for="Title" class="ms-2"></label>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <textarea asp-for="Description" class="form-control border-0 shadow" style="height:100px"></textarea>
                        <label asp-for="Description" class="ms-2"></label>
                    </div>

                    <div class="row">
                        <div class="form-floating py-2 col-4">
                            <input asp-for="Price" class="form-control border-0 shadow" />
                            <label asp-for="Price" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-4">
                            <input asp-for="DurationInMinutes" class="form-control border-0 shadow" />
                            <label asp-for="DurationInMinutes" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-4">
                            <input asp-for="TrailerUrl" class="form-control border-0 shadow" />
                            <label asp-for="TrailerUrl" class="ms-2"></label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-floating py-2 col-6">
                            <input asp-for="StartDate" type="date" class="form-control border-0 shadow" />
                            <label asp-for="StartDate" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-6">
                            <input asp-for="EndDate" type="date" class="form-control border-0 shadow" />
                            <label asp-for="EndDate" class="ms-2"></label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-floating py-2 col-5">
                            <select asp-for="MovieCategory" asp-items="Html.GetEnumSelectList<MovieCategory>()" class="form-select border-0 shadow">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <label asp-for="MovieCategory" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-5">
                            <select asp-for="AgeRating" asp-items="Html.GetEnumSelectList<AgeRating>()" class="form-select border-0 shadow">
                                <option disabled selected>--Select Age Rating--</option>
                            </select>
                            <label asp-for="AgeRating" class="ms-2"></label>
                        </div>
                        <div class="col-2 d-flex align-items-center justify-content-center">
                            <div class="form-check form-switch">
                                <input asp-for="IsReleased" class="form-check-input" type="checkbox">
                                <label asp-for="IsReleased" class="form-check-label">Released</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input type="file" name="file" class="form-control border-0 shadow" />
                        <label class="ms-2">Movie Poster</label>
                    </div>

                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control">@(Model.Id != 0 ? "Update" : "Create")</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <img src="@Model.ImageUrl" width="100%" style="border-radius:10px; border:1px solid #dee2e6" />
            </div>
        </form>
    </div>
</div>